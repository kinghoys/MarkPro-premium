rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Global collections accessible to all authenticated users
    match /students/{documentId} {
      // Allow read/write for all authenticated users
      allow read, write: if request.auth != null;
    }
    
    // Users collection with user-specific data
    match /users/{userId} {
      // Allow users to read/write only their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User's subjects subcollection
      match /subjects/{subjectId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's labs subcollection
      match /labs/{labId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's mid exam sessions subcollection
      match /midSessions/{midSessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's assignment sessions subcollection
      match /assignmentSessions/{assignmentSessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's seminar sessions subcollection
      match /seminarSessions/{seminarSessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Allow read/write for any future user subcollections
      match /{collection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Deny access to any other collections by default (security best practice)
    match /{document=**} {
      allow read, write: if false; // Change to false for production
    }
  }
}